/**index.wxss**/

.box {
  margin: 0;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#000;
  position: relative;
}

.box.base.unselected.duplicate {
  background: #cccccc;
  color: #d9534f;
}

.box.base.unselected.normal {
  background: #cccccc;
  color: #000;
}

.box.base.selected.duplicate {
  background: #e0e07c;
  color: #d9534f;
}

.box.base.selected.normal {
  background: #e0e07c;
  color: #000;
}

.box.unselected.normal {
  background: #fff;
  color: #000;
}

.box.selected.normal {
  background: #e0e07c;
  color: #000;
}

.box.unselected.duplicate {
  background: #fff;
  color: #d9534f;
}

.box.selected.duplicate {
  background: #e0e07c;
  color: #d9534f;
}

.row {
  display: flex;
  direction: row;
  justify-content: center;
  align-content: center;
}

.row:nth-child(n) {
  border-top: 1px solid #000;
}

.row:nth-child(9) {
  border-bottom: 1px solid #000;
}


.row .box:nth-child(n) {
  border-left: 1px solid #000;
}

.row .box:nth-child(9) {
  border-right: 1px solid #000;
}

.row:nth-child(3) {
  border-bottom: 2px solid #000;
}

.row:nth-child(6) {
  border-bottom: 2px solid #000;
}

.row .box:nth-child(3) {
  border-right: 2px solid #000;
}

.row .box:nth-child(6) {
  border-right: 2px solid #000;
}

.btn.normal.unfinish {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #cecece;
  border: solid 2px #fff;
  border-radius: 5px;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  color: #000;
}

.btn.normal.finish {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4b8a9f;
  border: solid 2px #fff;
  border-radius: 5px;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  color: #000;
}

.btn.pressed.unfinish {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c29122;
  border: solid 2px #fff;
  border-radius: 5px;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  color: #000;
}

.btn.pressed.finish {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c29122;
  border: solid 2px #fff;
  border-radius: 5px;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  color: #4b8a9f;
}