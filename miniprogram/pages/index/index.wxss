/**index.wxss**/

.box {
  margin: 0;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#000;
  position: relative;
}

.box.base.unselected.duplicate {
  background: #cccccc;
  color: #d9534f;
}

.box.base.unselected.normal {
  background: #cccccc;
  color: #000;
}

.box.base.selected.duplicate {
  background: #e0e07c;
  color: #d9534f;
}

.box.base.selected.normal {
  background: #e0e07c;
  color: #000;
}

.box.unselected.normal {
  background: #fff;
  color: #000;
}

.box.selected.normal {
  background: #e0e07c;
  color: #000;
}

.box.unselected.duplicate {
  background: #fff;
  color: #d9534f;
}

.box.selected.duplicate {
  background: #e0e07c;
  color: #d9534f;
}

.row {
  display: flex;
  direction: row;
  justify-content: center;
  align-content: center;
}

.row:nth-child(n) {
  border-top: 1px solid #000;
}

.row:nth-child(9) {
  border-bottom: 1px solid #000;
}


.row .box:nth-child(n) {
  border-left: 1px solid #000;
}

.row .box:nth-child(9) {
  border-right: 1px solid #000;
}

.row:nth-child(3) {
  border-bottom: 2px solid #000;
}

.row:nth-child(6) {
  border-bottom: 2px solid #000;
}

.row .box:nth-child(3) {
  border-right: 2px solid #000;
}

.row .box:nth-child(6) {
  border-right: 2px solid #000;
}

.btn.normal.unfinish {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #cecece;
  border: solid 2px #fff;
  border-radius: 5px;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  color: #000;
}

.btn.normal.finish {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4b8a9f;
  border: solid 2px #fff;
  border-radius: 5px;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  color: #000;
}

.btn.pressed.unfinish {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c29122;
  border: solid 2px #fff;
  border-radius: 5px;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  color: #000;
}

.btn.pressed.finish {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #c29122;
  border: solid 2px #fff;
  border-radius: 5px;
  font-family: 'Sim Hei', Tahoma, Geneva, Verdana, sans-serif;
  color: #4b8a9f;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 45rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 35rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 35rpx;
  line-height: 35rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 35rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 40rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec0033;
  text-align: center;
}